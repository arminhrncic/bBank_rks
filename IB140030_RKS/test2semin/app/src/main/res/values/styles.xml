<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BloodBankTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBloodBank</item>
        <item name="android:colorBackground">@color/background_material_lightbloodbank</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBloodBank</item>
        <item name="colorAccent">@color/colorAccentBloodBank</item>
    </style>

    <style name="BloodBankTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BloodBankTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BloodBankTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
